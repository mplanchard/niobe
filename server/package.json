{
  "name": "niobe-server",
  "version": "1.0.0",
  "description": "Niobe rest server",
  "main": "index.js",
  "scripts": {
    "test": "node --nolazy -r ts-node/register run-tests.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mplanchard/niobe.git"
  },
  "keywords": [
    "niobe",
    "server",
    "rest",
    "api"
  ],
  "author": "Matthew Planchard",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/mplanchard/niobe/issues"
  },
  "homepage": "https://github.com/mplanchard/niobe#readme",
  "dependencies": {
    "dotenv": "^6.0.0",
    "knex": "^0.15.2",
    "node-gyp": "^3.8.0",
    "pg": "^7.4.3",
    "pkginfo": "^0.4.1",
    "ramda": "^0.25.0",
    "restify": "^7.2.1"
  },
  "devDependencies": {
    "@types/dotenv": "^4.0.3",
    "@types/jest": "^23.3.1",
    "@types/knex": "^0.14.20",
    "@types/node": "^10.5.8",
    "@types/ramda": "^0.25.36",
    "@types/restify": "^7.2.3",
    "@types/rewire": "^2.5.28",
    "jest": "^23.4.2",
    "rewire": "^4.0.1",
    "ts-jest": "^23.1.3",
    "ts-node": "^7.0.0",
    "typescript": "^3.0.1"
  },
  "jest": {
    "roots": [
      "<rootDir>/src",
      "<rootDir>/tests"
    ],
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "testURL": "http://localhost/",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
